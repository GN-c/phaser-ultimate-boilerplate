{
  "compilerOptions": {
    "target": "es2015",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@GameObjects/*": ["src/GameObjects/*"],
      "@Scenes/*": ["src/Scenes/*"],
      "@Helpers/*": ["src/Helpers/*"],
      "@Utils": ["src/Helpers/Utils/index.ts"],
      "@Game": ["src/index.ts"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "useDefineForClassFields": false
    }
  }
}
